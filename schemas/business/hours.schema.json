{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.lokabisa.id/business/hours.schema.json",
  "title": "Business Opening Hours",
  "description": "Flexible opening hours schema for Indonesian local businesses",
  "type": "object",
  "properties": {
    "timezone": {
      "type": "string",
      "default": "Asia/Jakarta",
      "description": "IANA timezone name"
    },
    "weekly": {
      "type": "object",
      "description": "Weekly opening hours by day",
      "properties": {
        "mon": { "$ref": "#/$defs/dayRanges" },
        "tue": { "$ref": "#/$defs/dayRanges" },
        "wed": { "$ref": "#/$defs/dayRanges" },
        "thu": { "$ref": "#/$defs/dayRanges" },
        "fri": { "$ref": "#/$defs/dayRanges" },
        "sat": { "$ref": "#/$defs/dayRanges" },
        "sun": { "$ref": "#/$defs/dayRanges" }
      },
      "additionalProperties": false
    },
    "notes": {
      "type": ["string", "null"],
      "description": "Human-readable notes (e.g. 'Kadang tutup kalau habis')"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "dayRanges": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[0-2][0-9]:[0-5][0-9]-[0-2][0-9]:[0-5][0-9]$"
      },
      "description": "Time ranges in HH:MM-HH:MM format"
    }
  }
}
